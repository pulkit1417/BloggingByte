<div class="container">
    <div class="card user-profile-card">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-4 text-center">
                    <img src="<%= user.profileImageURL %>" alt="User Profile" class="img-fluid rounded-circle profile-image">
                </div>
                <div class="col-md-8">
                    <h2 class="card-title mb-3"><%= user.fullName %></h2>
                    <div class="user-meta">
                        <p class="mb-2"><i class="fas fa-envelope meta-icon"></i><span><%= user.email %></span></p>
                        <p class="mb-2"><i class="fas fa-user-tag meta-icon"></i><span>Author</span></p>
                        <% if (user.createdAt) { %>
                            <p class="mb-2"><i class="fas fa-calendar-alt meta-icon"></i><span>Joined <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span></p>
                        <% } %>
                        <p class="mb-0"><i class="fas fa-pen-fancy meta-icon"></i><span><%= blogs.length %> Blogs Published</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-5 mb-4"><i class="fas fa-blog mr-2"></i>Blogs</h3>
    <div id="posts" class="row">
        <% blogs.forEach(blog => { %>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img src="<%= blog.coverImage %>" class="card-img-top" alt="Blog Image" style="height: 150px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                        <a href="/blog/d/<%= blog._id %>" class="btn custom-btn mt-auto">Read More</a>
                        <p class="card-text"><small class="text-muted"><%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></small></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
    

<style>
    .user-profile-card {
        border: none;
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease;
    }
    .user-profile-card:hover {
        transform: translateY(-5px);
    }
    .profile-image {
        width: 180px;
        height: 180px;
        border: 4px solid var(--primary-color);
        padding: 3px;
        background-color: var(--card-bg);
    }
    .user-meta p {
        display: flex;
        align-items: center;
        color: var(--text-color);
        font-size: 0.95rem;
    }
    .meta-icon {
        width: 25px;
        height: 25px;
        background-color: var(--primary-color);
        color: var(--card-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        font-size: 0.8rem;
    }
    .card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

.card-img-top {
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}

.card-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
}

.card-text {
    color: #6c757d;
    margin-bottom: 1.25rem;
}

.custom-btn {
    background-color: #6200ea;
    color: white;
    border: none;
    padding: 10px 20px;
    transition: background-color 0.3s ease;
}

.custom-btn:hover {
    background-color: #6200ea;
    color: white;
}
</style>