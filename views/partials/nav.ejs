<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/favicon.ico" alt="logo" style="height: 40px; margin-right: 10px;">
      BloggingByte
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/">
            <i class="fas fa-home"></i> Home
          </a>
        </li>
        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/blog/add-new">
              <i class="fas fa-plus"></i> Add Blog
            </a>
          </li>
        <% } %>
      </ul>
      <form class="d-flex mx-auto" onsubmit="return performSearch()" style="width: 40%;">
        <div class="input-group">
          <input class="form-control" type="search" placeholder="Search blogs..." aria-label="Search" id="searchInput">
          <button class="btn btn-outline-light" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if (locals.user) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user"></i> <%= locals.user.fullName || 'User' %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
              <li><a class="dropdown-item" href="/user/<%= locals.user._id %>"><i class="fas fa-user-circle"></i> Profile</a></li>
              <li><a class="dropdown-item" href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/signin">
              <i class="fas fa-user-plus"></i> Create Account
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/login">
              <i class="fas fa-sign-in-alt"></i> Log In
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<script>
  function performSearch() {
    const searchTerm = document.getElementById('searchInput').value;
    if (searchTerm) {
      window.location.href = '/blog/search/' + encodeURIComponent(searchTerm);
    }
    return false;
  }
</script>