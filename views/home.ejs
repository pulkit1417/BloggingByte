<%- include('base', { content: `
    <h2 class="mb-4">${typeof searchTerm !== 'undefined' ? `Search Results for "${searchTerm}"` : 'Recent Blogs'}</h2>
    
    <div class="row">
        ${blogs.length > 0 ? blogs.map(blog => `
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="${blog.coverImage}" class="card-img-top" alt="${blog.title}">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">${blog.title}</h5>
                        <p class="card-text">${blog.body.substring(0, 100)}...</p>
                        <a href="/blog/${blog._id}" class="btn btn-primary mt-auto">Read More</a>
                    </div>
                    <div class="card-footer text-muted">
                        ${new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </div>
                </div>
            </div>
        `).join('') : '<p class="text-center">No blogs available at the moment.</p>'}
    </div>
    ` }) %>