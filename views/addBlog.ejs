
   
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <%- include('./partials/head.ejs') %>
    <style>
        body {
            background-color: #1a1a1a;
            color: #e0e0e0;
        }
        .container {
            background-color: #222;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }
        .form-control {
            background-color: #333;
            border: none;
            color: #e0e0e0;
        }
        .form-control::placeholder {
            color: #bbb;
        }
        .form-control:focus {
            background-color: #444;
            color: #e0e0e0;
            box-shadow: none;
        }
        .btn-primary {
            background-color: #6200ea;
            border: none;
        }
        .btn-primary:hover {
            background-color: #3700b3;
        }
    </style>

<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container">
        <h1 class="text-center mb-4">Add a New Blog</h1>
        <form action="/blog/add-new" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title">
            </div>
            <div class="form-group">
                <label for="body">Body</label>
                <textarea class="form-control" id="body" name="body" rows="5" placeholder="Enter blog content"></textarea>
            </div>
            <div class="form-group">
                <label for="coverImage">Cover Image</label>
                <input type="file" class="form-control" name="coverImage" id="coverImage">
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-4">Submit</button>
        </form>
    </div>

    <%- include('./partials/script.ejs') %>
</body>
</html>
