<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>

    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #121212;
        color: #e0e0e0;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 2rem 1rem;
      }
      .container {
        display: flex;
        max-width: 1200px;
        width: 100%;
        background-color: #1e1e1e;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .blog-content,
      .comments-section {
        padding: 2rem;
      }
      .blog-content {
        flex: 3;
      }
      .comments-section {
        flex: 2;
        border-left: 1px solid #333;
      }
      .cover-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
      }
      h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #ffffff;
      }
      .date {
        font-size: 0.9rem;
        color: #9e9e9e;
        margin-bottom: 1.5rem;
      }
      .description {
        font-size: 1.1rem;
        line-height: 1.6;
      }
      .author {
        display: flex;
        align-items: center;
        margin-top: 2rem;
      }
      .author img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 1rem;
      }
      .author-info {
        color: #9e9e9e;
      }
      .author-info h4 {
        margin: 0;
        color: #ffffff;
      }
      .comments-section h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #ffffff;
      }
      .comment {
        margin-bottom: 1rem;
        padding: 1rem;
        background-color: #2a2a2a;
        border-radius: 8px;
      }
      .comment .comment-author {
        font-size: 1rem;
        font-weight: bold;
        color: #ffffff;
      }
      .comment .comment-date {
        font-size: 0.8rem;
        color: #9e9e9e;
      }
      .comment .comment-text {
        font-size: 1rem;
        color: #e0e0e0;
        margin-top: 0.5rem;
      }
      .comment-form {
        margin-top: 2rem;
      }
      .comment-form input {
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 8px;
        background-color: #2a2a2a;
        color: #e0e0e0;
        font-size: 1rem;
        margin-bottom: 1rem;
      }
      .comment-form button {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        background-color: #4caf50;
        color: white;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      .comment-form button:hover {
        background-color: #45a049;
      }
      .comment {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
        padding: 1rem;
        background-color: #2a2a2a;
        border-radius: 8px;
      }
      .comment-pfp {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 1rem;
      }
      .comment .comment-author {
        font-size: 1rem;
        font-weight: bold;
        color: #ffffff;
      }
      .comment .comment-date {
        font-size: 0.8rem;
        color: #9e9e9e;
      }
      .comment .comment-text {
        font-size: 1rem;
        color: #e0e0e0;
        margin-top: 0.5rem;
      }
      .comment-placeholder{
        color:white;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <main>
      <div class="container">
        <div class="blog-content">
          <img
            src="<%= blog.coverImage %>"
            alt="Blog post cover"
            class="cover-image"
          />
          <h1><%= blog.title %></h1>
          <div class="date">
            <%= new Date(blog.createdAt).toLocaleDateString('en-US', { year:
            'numeric', month: 'long', day: 'numeric' }) %>
          </div>
          <p class="description"><%= blog.body %></p>
          <div class="author">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="Author" />
            <div class="author-info">
              <h4><%= blog.createdBy.fullName %></h4>
              <p>Author</p>
            </div>
          </div>
        </div>
        <div class="comments-section">
          <h2>Comments (<%= comments.length %>)</h2>
          <% comments.forEach(comment => { %>
          <div class="comment">
            <img
              src="<%= comment.createdBy.profileImageURL %>"
              alt="Commenter"
              class="comment-pfp"
            />
            <div>
              <div class="comment-author">
                <%= comment.createdBy.fullName %>
              </div>
              <div class="comment-date">
                <%= new Date(comment.createdAt).toLocaleDateString('en-US', {
                year: 'numeric', month: 'long', day: 'numeric' }) %>
              </div>
              <pre class="comment-text"><%= comment.content %></pre>
            </div>
          </div>
          <% }); %> <% if (locals.user) { %>
          <div class="comment-form">
            <form action="comment/<%= blog._id %>" method="post">
              <input
                class="comment-placeholder"
                type="text"
                name="content"
                class="form-control"
                placeholder="Enter your comment"
              />
              <button type="submit">Comment</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </main>

    <%- include('./partials/script.ejs') %>
  </body>
</html>
